<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_navigation_bar_bottom"
        android:gravity="center"
        android:padding="12dp"
        android:text="Change password"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
<!--        android:background="@drawable/background_diglog_bottom"-->
<!--        android:padding="16dp">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="18sp"
                android:text="Old password:"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/edt_matkhaucu_doimatkhau_dialog_doimk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_margin="10dp"
                android:hint="Please enter"

                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="18sp"
                android:text="New password:"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/edt_matkhaumoi_doimatkhau_dialog_doimk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_margin="10dp"
                android:hint="Please enter"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="18sp"
                android:text="Re-enter password:"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/edt_xacnhanmatkhaumoi_doimatkhau_dialog_doimk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_margin="10dp"
                android:hint="Please enter"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dialog_xacnhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background_login_btn2"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>